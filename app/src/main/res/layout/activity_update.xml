<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:padding="8dp"
    android:background="@color/backgroundSplashscreen">

    <EditText
        android:id="@+id/editNomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textNomor"
        android:layout_below="@+id/textNomor"
        android:drawableLeft="@drawable/ic_create"
        android:inputType="number"
        android:maxLength="10"
        android:drawablePadding="8dp">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Nomor" />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textNama"
        android:layout_below="@+id/textNama"
        android:drawableLeft="@drawable/ic_group"
        android:inputType="text"
        android:maxLength="20"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNomor"
        android:layout_below="@+id/editNomor"
        android:layout_marginTop="10dp"
        android:text="Nama" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDate"
        android:layout_below="@+id/textDate"
        android:drawableLeft="@drawable/ic_date_range"
        android:hint="1993-12-08"
        android:inputType="date"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNama"
        android:layout_below="@+id/editNama"
        android:layout_marginTop="10dp"
        android:text="Tanggal Lahir" />

    <EditText
        android:id="@+id/editJenisKelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textJenisKelamin"
        android:layout_below="@+id/textJenisKelamin"
        android:drawableLeft="@drawable/ic_person"
        android:hint="L atau P"
        android:inputType="text"
        android:maxLength="1"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/textJenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editDate"
        android:layout_below="@+id/editDate"
        android:layout_marginTop="10dp"
        android:text="Jenis Kelamin" />

    <EditText
        android:id="@+id/editAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAlamat"
        android:layout_below="@+id/textAlamat"
        android:drawableLeft="@drawable/ic_place"
        android:inputType="text"
        android:maxLength="100"
        android:drawablePadding="8dp"/>

    <TextView
        android:id="@+id/textAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editJenisKelamin"
        android:layout_below="@+id/editJenisKelamin"
        android:layout_marginTop="10dp"
        android:text="Alamat" />

    <Button
        android:id="@+id/btn_simpan_data"
        style="@style/PlainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editAlamat"
        android:drawableLeft="@drawable/ic_save"
        android:text="Simpan"
        android:drawablePadding="8dp"
        android:background="@drawable/stylebutton1"
        android:layout_margin="8dp"
        android:textSize="20sp" />


</RelativeLayout>