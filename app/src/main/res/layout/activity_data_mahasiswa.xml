<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    tools:context=".DataMahasiswaActivity"
    android:background="@color/backgroundSplashscreen">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_input_data"/>

    <Button
        android:id="@+id/btn_input_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_data"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/stylebutton1"
        style="@style/PlainText"
        android:drawableLeft="@drawable/ic_save"
        android:drawablePadding="8dp"/>

</RelativeLayout>













